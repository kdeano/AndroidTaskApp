<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tasksFragment">

    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.kyle.tasksapp.ui.tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks">
        <action
            android:id="@+id/action_tasksFragment_to_taskAddFragment"
            app:destination="@id/taskAddFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskAddFragment"
        android:name="com.kyle.tasksapp.ui.taskadd.TaskAddFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_add_task" >
        <argument
            android:name="task"
            app:argType="com.kyle.tasksapp.data.Task"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/deleteCompletedFragment"
        android:name="com.kyle.tasksapp.ui.deletecompleted.DeleteCompletedFragment"
        android:label="DeleteCompletedFragment" /><action android:id="@+id/action_global_deleteCompletedFragment" app:destination="@id/deleteCompletedFragment"/>
</navigation>